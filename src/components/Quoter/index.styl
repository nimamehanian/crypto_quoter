.quoter
  .amount-field
    text-align center
    .label
      font-size 11px
      color $textQuote
      letter-spacing 0.6px
      margin-bottom 4px
      float left
    input
      height 36px
      width 164px
      padding 0px 8px 0px 8px
      margin-bottom 16px
      border 1px solid #565f66
      border-radius 2px
      box-shadow none
      font-size 14px
      color #fff
      background #404a52
      &:focus
        border 1px solid $textQuote
    .currency
      font-size 11px
      color $textCream
      text-align right
      float right
      position relative
      top 29px
      right 9px
      letter-spacing 1px
      font-family 'Lato Bold'
  .quote
    display flex
    justify-content space-between
    align-items center
    font-size 12px
    padding-top 0px
    font-family 'Lato Regular'
    letter-spacing 0.62px
    color $textQuote
    &.unit-price
      border-top 2px solid $horizRule
      padding-top 16px
    .label
      display flex
      align-items center
      .currency
        font-family 'Lato Thin'
      .almost-equal-to-symbol
        font-family 'Lato Thin'
        font-size 24px
        margin-left 1px
    .value
      .insig-fig
        color rgba(#fff, 0.2)
