.order-form
  background $sidebarBg
  position absolute
  top 0px
  width 230px
  bottom 0px
  left 0px
  color #fff
  .heading
    display flex
    justify-content center
    align-items center
    height 45px
    background #fff
    .left
      display flex
      justify-content center
      align-items center
      background #fff
      height 45px
      width 50%
      i
        color $textCharcoal
        font-size 28px
        cursor pointer
        &:hover
          color $textHover
    .vertical-rule
      background #d0d3d5
      width 1px
      height 30px
  .wrapper
    margin 0px 24px
